{
  "manifest_version": 2,
  "name": "Tech Updates Notifier",
  "description": "Get notified about daily updates of tech tools",
  "version": "1.0",
  "permissions": ["https://api.github.com/*"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_security_policy": "script-src 'self' https://api.github.com; object-src 'self'",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
